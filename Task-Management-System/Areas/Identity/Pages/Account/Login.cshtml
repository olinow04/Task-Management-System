@page
@model Task_Management_System.Areas.Identity.Pages.Account.LoginModel

@{
    ViewData["Title"] = "Logowanie";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card-modern">
            <div class="card-modern-header">
                <h2 class="card-modern-title">@ViewData["Title"]</h2>
            </div>
            <div class="card-modern-body">
                <section>
                    <form id="account" method="post">
                        <hr />
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                            <label asp-for="Input.Email" class="form-label">Email</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="hasło" />
                            <label asp-for="Input.Password" class="form-label">Hasło</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="checkbox mb-3">
                            <label asp-for="Input.RememberMe" class="form-label">
                                <input class="form-check-input" asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                        <div>
                            <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Zaloguj</button>
                        </div>
                        <div class="mt-4 text-center">
                            <p class="text-muted mb-2" style="font-size: 0.85rem;">
                                <a asp-page="./ForgotPassword" style="color: #9AAAC0; text-decoration: none;">Zapomniałeś hasła?</a>
                            </p>
                            <p class="text-muted mb-2" style="font-size: 0.85rem;">
                                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" style="color: #9AAAC0; text-decoration: none;">Zarejestruj nowe konto</a>
                            </p>
                            <p class="text-muted mb-0" style="font-size: 0.85rem;">
                                <a asp-page="./ResendEmailConfirmation" style="color: #9AAAC0; text-decoration: none;">Wyślij ponownie email potwierdzający</a>
                            </p>
                        </div>
                    </form>
                </section>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

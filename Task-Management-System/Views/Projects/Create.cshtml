@model Task_Management_System.Models.Project

@{
    ViewData["Title"] = "Nowy Projekt";
}

<div class="container animate-fade-in" style="max-width: 800px;">
    <div class="page-header">
        <h1>➕ Nowy Projekt</h1>
    </div>

    <div class="form-modern">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
            
            <div class="form-group">
                <label asp-for="Name" class="control-label">Nazwa projektu</label>
                <input asp-for="Name" class="form-control" placeholder="Wpisz nazwę projektu" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Description" class="control-label">Opis</label>
                <textarea asp-for="Description" class="form-control" rows="4" placeholder="Opisz projekt... "></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="StartDate" class="control-label">Data rozpoczęcia</label>
                        <input asp-for="StartDate" class="form-control" type="date" />
                        <span asp-validation-for="StartDate" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="EndDate" class="control-label">Data zakończenia</label>
                        <input asp-for="EndDate" class="form-control" type="date" />
                        <span asp-validation-for="EndDate" class="text-danger"></span>
                    </div>
                </div>
            </div>
            
            <div class="form-group">
                <label asp-for="Status" class="control-label">Status</label>
                <select asp-for="Status" class="form-control">
                    <option value="0">Aktywny</option>
                    <option value="1">Ukończony</option>
                    <option value="2">Wstrzymany</option>
                    <option value="3">Anulowany</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            
            <div class="form-group mt-4">
                <div class="action-buttons">
                    <button type="submit" class="btn btn-primary-custom">💾 Utwórz Projekt</button>
                    <a asp-action="Index" class="btn btn-secondary-custom">↩️ Anuluj</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
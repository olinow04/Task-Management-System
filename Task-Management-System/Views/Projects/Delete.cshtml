@model Task_Management_System.Models.Project

@{
    ViewData["Title"] = "Delete Project";
}

<h1>Usuń Projekt</h1>

<h3>Czy na pewno chcesz usunąć ten projekt?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Nazwa</dt>
        <dd class="col-sm-10">@Model.Name</dd>
        <dt class="col-sm-2">Opis</dt>
        <dd class="col-sm-10">@Model.Description</dd>
        <dt class="col-sm-2">Data rozpoczęcia</dt>
        <dd class="col-sm-10">@Model.StartDate.ToShortDateString()</dd>
        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.Status</dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Usuń" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Powrót</a>
    </form>
</div>

@model Task_Management_System.Models.TaskItem

@{
    ViewData["Title"] = "Delete Task";
}

<h1>Usuń zadanie</h1>

<h3>Czy na pewno chcesz usunąć to zadanie?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Tytuł</dt>
        <dd class="col-sm-10">@Model.Title</dd>
        <dt class="col-sm-2">Opis</dt>
        <dd class="col-sm-10">@Model.Description</dd>
        <dt class="col-sm-2">Projekt</dt>
        <dd class="col-sm-10">@Model.Project?.Name</dd>
        <dt class="col-sm-2">Priorytet</dt>
        <dd class="col-sm-10">@Model.Priority</dd>
        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.Status</dd>
        <dt class="col-sm-2">Termin wykonania</dt>
        <dd class="col-sm-10">@(Model.DueDate?.ToShortDateString() ?? "-")</dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Usuń" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Powrót</a>
    </form>
</div>
